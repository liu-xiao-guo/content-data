#!/bin/bash

echo "starting to create a file in the producer's common directory"
echo "This is good" >> /var/snap/content-data-producer/common/test.txt

if [ $? -eq 0 ]; then
	echo "If you see this, it is successful to write to the common directory of the producer!!!"
else
    echo "It fails to write to the common directory of the producer!"
fi


